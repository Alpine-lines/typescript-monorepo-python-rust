{
  "name": "typescript-python-rust-monorepo-boilerplate",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "postinstall": "yarn setup:env && husky install && patch-package",
    "scripts:bash": "bash scripts/script.sh",
    "scripts:js": "node scripts/script.js",
    "link:ui": "yarn workspace ui link ./",
    "clean": "./clean_workspace.sh && yarn cache clean",
    "lint-staged": "lint-staged",
    "lint": "yarn workspaces run lint",
    "lint:ui": "yarn workspace ui run lint",
    "lint:app": "yarn workspace app run lint",
    "lint:desktop": "yarn workspaces desktop run lint",
    "lint:extension": "yarn workspace extension run lint",
    "app": "yarn workspace app dev",
    "build:app": "yarn workspace app build",
    "serve:app": "yarn workspace app start",
    "extension": "yarn workspace extension dev",
    "build:ext": "yarn workspace extension build:all",
    "desktop": "yarn workspace desktop dev",
    "make:desktop": "yarn workspace desktop make",
    "package:desktop": "yarn workspace desktop package",
    "fetch:locale": "yarn workspace @hunt/ui fetch:locale",
    "test": "yarn test:unit",
    "test:unit": "yarn jest ./test/unit/",
    "test:ui": "yarn workspace ui run test",
    "test:app": "yarn workspace app run test",
    "test:desktop": "yarn workspace desktop run test",
    "test:extension": "yarn workspace extension run test",
    "setup:env": "if [ ! -f .env ]; then cp .env.example .env; fi",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "expo": "^45.0.5",
    "expo-yarn-workspaces": "^2.0.0",
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@types/chrome": "^0.0.161",
    "@types/jest": "^27.0.3",
    "@types/memoizee": "^0.4.8",
    "@types/node": "^16.7.13",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@types/semver": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.4.2",
    "babel-loader": "8.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-preset-react-app": "^10.0.0",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^5.2.7",
    "ejs-loader": "^0.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-config-wesbos": "2.1.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eth-rpc-errors": "^4.0.3",
    "file-loader": "^6.2.0",
    "fs-extra": "^10.0.0",
    "globalthis": "^1.0.2",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "http-server": "^14.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lint-staged": "^11.2.6",
    "node-notifier": "^10.0.0",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.2",
    "raw-loader": "^4.0.2",
    "remove-files-webpack-plugin": "^1.4.5",
    "rimraf": "^3.0.2",
    "sharedworker-loader": "^2.1.1",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^9.2.6",
    "typescript": "4.4.4",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "^4.3.1",
    "worker-loader": "^3.0.7"
  },
  "resolutions": {
    "**/webpack-dev-server": "^4.3.1",
    "**/browserslist": "^4",
    "**/immer": "^9"
  },
  "nohoist": [
    "packages/ui/**/**",
    "packages/desktop/**/**"
  ]
}
